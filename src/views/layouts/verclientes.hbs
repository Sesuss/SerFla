</head>
<div class="container p-4">
    <div class="row">
        <div class=" mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-dark mb-3 h4">Clientes</h1>
                    <div class=" mx-auto">
                        <div class="card">
                            <div class="card-body" style="background-color:#d9d9d9;">
                                <h1 class="text-dark mb-3 h4">Buscar</h1>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input  id="busquedaNO" type="text"
                                            class="form-control" placeholder="Nombre">
                                        <span class="input-group-addon"></span>
                                        <input  id="busquedaCO" type="text" 
                                            class="form-control" placeholder="Colonia">
                                        <span class="input-group-addon"></span>
                                        <input  id="busquedaCA" type="text" 
                                            class="form-control" placeholder="Calle">
                                        <span class="input-group-addon"></span>
                                        <input  id="busquedaNU" type="number" 
                                            class="form-control" placeholder="Numero">
                                    </div>
                                </div>
                                <div class="form-group px-2">
                                    <table class="table table-bordered table-hover" id="tblmas">
                                        <thead id="tblh" style="display:none">
                                            <tr role="row">
                                                <th>Nombre</th>
                                                <th>Colonia</th>
                                                <th>Calle</th>
                                                <th>Numero</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tblbody">
                                            {{#each clientes}}
                                            <tr id="{{IdCliente}}" style="display:none">
                                                <td><a href="/ver_cliente/{{IdCliente}}"
                                                        class="link-primary">{{Nombre}}</a> </td>
                                                <td>{{DirColonia}}</td>
                                                <td>{{DirCalle}}</td>
                                                <td>{{DirNum}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="form-group pu-5">
                                    <button style="display:none" id="lib" class="btn btn-success">
                                        <a href="" id="link" class="btn btn-success"></a></button>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="card">
                            <div class="card-body" style="background-color:#d9d9d9;">
                                <h1 class="text-dark mb-3 h4">Agrega</h1>
                                <button class="btn btn-info size-2" onclick=Agregar() id="btnadd" title="AGREGAR">
                                    <i style="color: white;" class="fas fa-plus"></i>
                                </button>
                                <form action="/cliente_agregar" method="POST" style="display:none" id="form">
                                    <div class="form-group">
                                        <label>Id Cliente</label>
                                        <input type="number" name="IdCliente" style="display:none"
                                            class="form-control text-dark m-1" value="{{num}}">
                                        <input type="number" class="form-control text-dark m-1" value="{{num}}"
                                            disabled>
                                    </div>
                                    <div class="form-group">
                                        <label>Nombre</label>
                                        <input type="text" name="Nombre" class="form-control text-dark m-1" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Colonia</label>
                                        <input type="text" name="DirColonia" class="form-control text-dark m-1"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label>Calle</label>
                                        <input type="text" name="DirCalle" class="form-control text-dark m-1" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Numero</label>
                                        <input type="number" name="DirNum" class="form-control text-dark m-1" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Entre</label>
                                        <input type="text" name="DirEntre" class="form-control text-dark m-1" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Telefono</label>
                                        <input type="number" name="Telefono" class="form-control text-dark m-1"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label>RFC</label>
                                        <input type="number" name="RFC" class="form-control text-dark m-1">
                                    </div>
                                    <div class="form-group">
                                        <label>Municipio</label>
                                        <input type="text" name="Municipio" class="form-control text-dark m-1" required>
                                    </div>
                                    <div class="form-group">
                                        <label>CP</label>
                                        <input type="number" name="CP" class="form-control text-dark m-1" required>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-info btn-block mx-1" title="ENVIAR">
                                            <i style="color: white;" class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    const busquedaNO = document.getElementById("busquedaNO")
    const busquedaCO = document.getElementById("busquedaCO")
    const busquedaCA = document.getElementById("busquedaCA")
    const busquedaNU = document.getElementById("busquedaNU")

    let array = []
    {{#each clientes }}
    array.push({
        id: "{{IdCliente}}",
        nombre: "{{Nombre}}",
        calle: "{{DirCalle}}",
        colonia: "{{DirColonia}}",
        numero:"{{DirNum}}"
    })
    {{/each}}

            function buscarNO() {
                busquedaCO.value=""
                busquedaCA.value=""
                busquedaNU.value=""
                const texto = busquedaNO.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let nombre = array[index].nombre.toLowerCase()
                    if (nombre.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }
            function buscarCO() {
                busquedaNO.value=""
                busquedaCA.value=""
                busquedaNU.value=""
                const texto = busquedaCO.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let colonia = array[index].colonia.toLowerCase()
                    if (colonia.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }
            function buscarCA() {
                busquedaCO.value=""
                busquedaNO.value=""
                busquedaNU.value=""
                const texto = busquedaCA.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let calle = array[index].calle.toLowerCase()
                    if (calle.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }
            function buscarNU() {
                busquedaCO.value=""
                busquedaCA.value=""
                busquedaNO.value=""
                const texto = busquedaNU.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let numero = array[index].numero
                    if (numero.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }
            busquedaNO.addEventListener("keyup", buscarNO)
            busquedaNO.addEventListener("keydown", buscarNO)
            busquedaCO.addEventListener("keyup", buscarCO)
            busquedaCO.addEventListener("keydown", buscarCO)
            busquedaCA.addEventListener("keyup", buscarCA)
            busquedaCA.addEventListener("keydown", buscarCA)
            busquedaNU.addEventListener("keyup", buscarNU)
            busquedaNU.addEventListener("keydown", buscarNU)

            function Agregar() {
                document.getElementById("btnadd").style.display = "none"
                document.getElementById("form").style.display = "block"

            }

</script>