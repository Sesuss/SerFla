<div class="container p-4">
    <div class="row">
        <div class=" mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-dark mb-3 h4">Notas</h1>
                    <div class=" mx-auto">
                        <div class="card">
                            <div class="card-body" style="background-color:#d9d9d9;">
                                <h1 class="text-dark mb-3 h4">Agregar Concepto</h1>
                                <button class="btn btn-info btn-block mx-1" title="AGREGAR CONCEPTO" onclick=agregar()
                                    id="btna">
                                    <i style="color: white;" class="fas fa-plus"></i>
                                </button>
                                <form action="/agregar_nota" method="post" style="display: none;" id="forma">
                                    <div class="form-group" Style="display: none;">
                                        <input type="number" name="IdNotas" class="form-control text-dark m-1" value="{{IdN}}">
                                    </div>
                                    <div class="form-group" Style="display: none;">
                                        <input type="number" name="Id" class="form-control text-dark m-1" value="{{id}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Cantidad</label>
                                        <input type="number" name="Cantidad" class="form-control text-dark m-1"
                                            value="1" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Descripcion</label>
                                        <input type="text" name="Descripcion" class="form-control text-dark m-1"
                                            required>

                                    </div>
                                    <div class="form-group">
                                        <label>Precio Unitario</label>
                                        <input type="number" name="PrecioUnitario" class="form-control text-dark m-1"
                                            value="0" required>

                                    </div>
                                    <div class="form-group">
                                        <label>Importe</label>
                                        <input type="number" name="Importe" class="form-control text-dark m-1" value="0"
                                            required>

                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-info btn-block mx-1" title="ENVIAR">
                                            <i style="color: white;" class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </form>
                            
                               
                            </div>
                        </div>
                    </div>
                            <br>
                    {{#if notas}}
                    <div class="card">
                        <div class="card-body" style="background-color:#d9d9d9;">
                            <h1 class="text-dark mb-3 h4">Ver</h1>
                            <div class="form-group px-2">
                                <table class="table table-bordered table-hover" id="tblmas">
                                    <thead id="tblh">
                                        <tr role="row">
                                            <th>Id</th>
                                            <th>Cantidad</th>
                                            <th>Descripcion</th>
                                            <th>Precio Unit</th>
                                            <th>Importe</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblbody">
                                        
                                        {{#each notas}}
                                        <tr id="{{IdOrdenServicio}}">
                                            <th>{{IdNotas}}</th>
                                            <th>{{Cantidad}}</th>
                                            <th>{{Descripcion}}</th>
                                            <th>{{PrecioUnitario}}</th>
                                            <th>{{Importe}}</th>
                                        </tr>
                                        {{/each}}
                                        
                                    </tbody>
                                </table>
                            </div>
                    {{/if}}
                    <br>
                    <hr>
                     <h1 class="text-dark mb-3 h4">Cerrar Nota</h1>
                                <form action="/cerrar_nota" method="post" >
                                <div class="form-group" Style="display: none;">
                                        <input type="number" name="Id" class="form-control text-dark m-1" value="{{id}}">
                                    </div>
                                    <div class="form-group" >
                                        <button class="btn btn-info btn-block mx-1" title="CERRAR NOTA">
                                            <i style="color: white;" class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    function agregar() {
        document.getElementById("btna").style.display = "none"
        document.getElementById("forma").style.display = "block"
    }
</script>