<div class="container p-4">
    <div class="row">
        <div class=" mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-dark mb-3 h4">Notas</h1>
                    <div class=" mx-auto">
                        <div class="card">
                            <div class="card-body" style="background-color:#d9d9d9;">
                                <h1 class="text-dark mb-3 h4">Agregar CONCEPTO</h1>
                                <form action="/agregar_nota_n" method="post" >
                                    <div class="form-group" style="display: none;">
                                        <input type="number" name="IdOrdenServicio" value="{{id}}">
                                    </div>
                                    <div class="form-group" style="display: none;">
                                        <input type="text" name="NotaCerrada" value="0">
                                    </div>
                                    {{#each orden}}
                                    <div class="form-group" Style="display: none;" >
                                        <input type="number" name="IdCliente" class="form-control text-dark m-1" value="{{IdCliente}}">
                                    </div>
                                    {{/each}}
                                    <div class="form-group">
                                        <label>Garantia</label>
                                        <select name="Garantia" class="form-select text-dark m-1 " required>
                                            <option value="30">30</option>
                                            <option value="60">60</option>
                                            <option value="90">90</option>
                                            <option value="120">120</option>
                                            <option value="180">180</option>
                                        </select>
                                    </div>
                                     <div class="form-group">
                                        <label>Fecha de Nota</label>
                                        <input type="date" name="FechaNota" class="form-control text-dark m-1"
                                             required>
                                    </div>
                                    <hr>
                                    <div class="form-group">
                                        <label>Cantidad</label>
                                        <input type="number" name="Cantidad" class="form-control text-dark m-1"
                                            value="1" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Descripcion</label>
                                        <input type="text" name="Descripcion" class="form-control text-dark m-1"
                                            required>

                                    </div>
                                    <div class="form-group">
                                        <label>Precio Unitario</label>
                                        <input type="number" name="PrecioUnitario" class="form-control text-dark m-1"
                                            value="0" required>

                                    </div>
                                    <div class="form-group">
                                        <label>Importe</label>
                                        <input type="number" name="Importe" class="form-control text-dark m-1" value="0"
                                            required>

                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-info btn-block mx-1" title="ENVIAR CONCEPTO">
                                            <i style="color: white;" class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </form>
                                <br>
                                {{#each orden}}
                                <div style="margin-left: 5px;">
                                <button class="btn btn-info" title="REGRESAR">
                                <a href="/ver_cliente/{{IdCliente}}" ><i style="color: white;" class="fas fa-chevron-left"></i></a>
                                </button>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
